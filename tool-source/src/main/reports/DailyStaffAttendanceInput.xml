<!-- ******************************************************** -->
<!-- INPUT DEFINITION FOR THE "DAILY STAFF ATTENDANCE" REPORT -->
<!-- ******************************************************** -->

<tool-input allow-school-select="true" >

 <!-- **** -->
 <!-- DATE -->
 <!-- **** -->
 
 <input name="date" data-type="date" display-type="date" display-name="report.shared.date" default-value="today"/>

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
  <option value="code, staff.nameView" display-name="report.shared.sort.code"/>
  <option value="staff.nameView, code" display-name="report.shared.sort.name"/>
  <option value="staff.departmentCode, staff.nameView, code" display-name="report.shared.sort.department"/>
 </input>

</tool-input>