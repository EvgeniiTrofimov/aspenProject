<!-- ********************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "USER ORIENTATION LABELS" REPORT -->
<!-- ********************************************************** -->

<tool-input allow-org-select="true" context="com.x2dev.sis.model.beans.SisUser">

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->

 <input name="queryBy" data-type="string" display-type="select" display-name="report.user.query" default-value="generated">
  <option value="##current" display-name="report.shared.query.currentSelection" context-dependent="true"/>
  <option value="generated" display-name="report.user.query.generated"/>
  <option value="##all" display-name="report.shared.query.all"/>
 </input>

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
  <option value="##current" display-name="report.shared.sort.currentSort" context-dependent="true"/>
  <option value="nameView" display-name="report.shared.sort.name"/>
 </input>

 <!-- *** -->
 <!-- URL -->
 <!-- *** -->

 <input name="url" data-type="string" display-type="text" display-name="report" default-value="http://school.domain.edu/x2sis"/>

</tool-input>