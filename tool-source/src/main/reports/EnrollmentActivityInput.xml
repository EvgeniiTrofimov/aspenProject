<!-- ****************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "ENROLLMENT ACTIVITY" REPORT -->
<!-- ****************************************************** -->

<tool-input allow-school-select="true" allow-org-select="true">

 <!-- ********** -->
 <!-- DATE RANGE -->
 <!-- ********** -->
 
 <input name="startDate" data-type="date" display-type="date" display-name="report.shared.startDate" default-value="districtYearStart" />
 <input name="endDate" data-type="date" display-type="date" display-name="report.shared.endDate" default-value="today" />

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
  <option value="enrollmentDate, student.nameView" display-name="report.shared.sort.date"/>
  <option value="student.nameView, enrollmentDate" display-name="report.shared.sort.name"/>
  <option value="student.yog, student.nameView, enrollmentDate" display-name="report.shared.sort.yog"/>
  <option value="school.name, enrollmentDate, student.nameView" display-name="report.shared.sort.school"/>
  <option value="enrollmentType, enrollmentDate, student.nameView" display-name="report.recentEnrollment.type"/>
 </input>

</tool-input>