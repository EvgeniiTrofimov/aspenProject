<!-- ***************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "LOCKER ASSIGNMENT" REPORTS -->
<!-- ***************************************************** -->

<tool-input allow-school-select="true" district-support="false">
 
 <!-- ************** -->
 <!-- DISPLAY OPTIONS -->
 <!-- ************** -->

 <input name="display" data-type="integer" display-type="select" display-name="report.shared.query.record">
  <option value="0" display-name="report.lockers.students" />
  <option value="1" display-name="report.lockers.missingLocker" />
  <option value="2" display-name="report.lockers.locker" />
  <option value="3" display-name="report.lockers.unassignedLocker" />
  <option value="4" display-name="report.lockers.all" />
 </input>

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="integer" display-type="select" display-name="report.shared.sort">
  <option value="0" display-name="report.shared.sort.name" />
  <option value="1" display-name="report.shared.sort.yog" />
  <option value="2" display-name="report.shared.sort.homeroom" />
  <option value="3" display-name="report.lockers.sort" />
 </input>

 <!-- *********** -->
 <!-- ACTIVE-ONLY -->
 <!-- *********** -->

 <input name="activeOnly" data-type="boolean" display-type="checkbox" display-name="report.shared.activeStudentsOnly" default-value="true" />

</tool-input>