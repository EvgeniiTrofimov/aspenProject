<!-- **************************************************************** -->
<!-- REPORT INPUT DEFINITIONS FOR THE "STUDENT LOCATOR" REPORT -->
<!-- **************************************************************** -->

<tool-input allow-school-select="false" district-support="false">

 <!-- *********** -->
 <!-- db server name is the name of the host that the BC eSIS Oracle       -->
 <!-- database runs on that is linked to the Aspen SQL Server database    -->
 <!-- *********** -->

<input name="LINKED_DB_SERVER" data-type="text" display-type="hidden" default-value="S415V28" />

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->

<input name="StudentFirstName" data-type="string" display-type="text" required="false" display-name="Legal First Name" default-value=""/>
<input name="StudentLastName" data-type="string" display-type="text" display-name="Legal Last Name" default-value=""/>
<input name="StudentGender" data-type="string" display-type="select" display-name="Gender">
  <option value="" display-name=""/>
  <option value="M" display-name="Male"/>
  <option value="F" display-name="Female"/>
 </input>
 <input name="StudentBirthDate" data-type="date" display-type="date" display-name="Date of birth" default-value=""/>
 
  
</tool-input>