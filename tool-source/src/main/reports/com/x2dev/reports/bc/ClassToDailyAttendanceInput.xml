<!-- *************************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "CLASS TO DAILY ATTENDANCE" PROCEDURE -->
<!-- *************************************************************** -->

<tool-input>

 <!-- *********** -->
 <!-- SCHOOL YEAR -->
 <!-- *********** -->

 <input name="contextOid" data-type="string" display-type="picklist" display-name="report.shared.schoolYear" default-value="organization.currentContextOid" default-value-source="session">
  <picklist field-id="ctxSchoolYear">
   <field id="ctxSchoolYear" sort="true" />
   <field id="ctxContextName" />
  </picklist>
 </input>
 
 <!-- ********** -->
 <!-- DATE RANGE -->
 <!-- ********** -->
 
 <input name="startDate" data-type="date" display-type="date" display-name="report.shared.startDate" default-value="today" />
 <input name="endDate" data-type="date" display-type="date" display-name="report.shared.endDate" default-value="today" />
 
 <!-- ************ -->
 <!-- PREVIEW MODE -->
 <!-- ************ -->

 <input name="previewMode" data-type="boolean" display-type="checkbox" display-name="Preview mode" default-value="false" />
 
</tool-input>