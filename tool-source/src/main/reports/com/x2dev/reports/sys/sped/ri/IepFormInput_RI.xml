<!-- ************************************************* -->
<!-- INPUT DEFINITIONS FOR THE RHODE ISLAND IEP REPORT -->
<!-- ************************************************* -->

<tool-input>

 <!-- ************** -->
 <!-- PRINT AS DRAFT -->
 <!-- ************** -->
 
 <input name="printAsDraft" data-type="boolean" display-type="checkbox" display-name="Print as draft" default-value="false" />

 <input name="reportType" data-type="string" display-type="select" display-name="Select Report">
  <option value="u6" display-name="Ages 3-5"/>
  <option value="6t13" display-name="Ages 6-13" />
  <option value="o13" display-name="Secondary Transition"/>
 </input>

 <!-- ***************** -->
 <!-- SAVE TO DOCUMENTS -->
 <!-- ***************** -->

 <input name="saveToDocumentsIEP" data-type="boolean" display-type="checkbox" display-name="label.toolInput.saveToDocuments" default-value="false" />
 <input name="documentName" data-type="string" display-type="hidden" default-value="IEPReport" />
 <input name="documentType" data-type="string" display-type="hidden" default-value="Special Ed" />

</tool-input>
