<!-- ************************************************************* -->
<!-- INPUT DEFINITIONS FOR THE "IEP ACCESS LOG BY STUDENT" REPORT -->
<!-- ************************************************************* -->

<tool-input allow-school-select="false" context="com.x2dev.sis.model.beans.IepData">

 <!-- ********************** -->
 <!-- IEP SELECT OPTIONS -->
 <!-- *********************** -->

 <input name="queryBy" data-type="string" display-type="select" display-name="report.shared.query.record">
  <option value="##current" display-name="report.shared.query.currentSelection" context-dependent="true" />
  <option value="##all" display-name="report.shared.query.all"/>
 </input>
 
 <!-- ********** -->
 <!-- DATE RANGE -->
 <!-- ********** -->

 <input name="startDate" data-type="date" display-type="date" display-name="report.shared.startDate" required="false" />
 <input name="endDate" data-type="date" display-type="date" display-name="report.shared.endDate" required="false" />
 
 <!-- *********** -->
 <!-- SIGNATURE LINE -->
 <!-- *********** -->

 <input name="signature" data-type="boolean" display-type="checkbox" display-name="report.shared.signature" default-value="false"/>

</tool-input>