<!-- ************************************************************************************* -->
<!-- REPORT INPUT DEFINITIONS FOR THE "Hearing or vision screening" REPORT -->
<!-- ************************************************************************************* -->

<tool-input allow-school-select="true" district-support="true" context="com.x2dev.sis.model.beans.HealthScreening">

 <!-- *********** -->
 <!-- REPORT DATE -->
 <!-- *********** -->


 <input name="date" data-type="date" display-type="date" display-name="Return by date" default-value="today"/>

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->

 <input name="queryBy" data-type="string" display-type="select" display-name="report.shared.query">
  <option value="##current" display-name="report.shared.query.currentSelection" context-dependent="true"/>
</input>

 <!-- ************** -->
 <!-- vision or hearing -->
 <!-- ************** -->

 <input name="type" data-type="string" display-type="select" display-name="Referral Type">
  <option value="Hearing" display-name="Hearing"/>
  <option value="Vision" display-name="Vision" />
 </input>

</tool-input>