<!-- ********************************************* -->
<!-- REPORT INPUT DEFINITIONS FOR THE "IEP" REPORT -->
<!-- ********************************************* -->

<tool-input district-support="false" context="com.x2dev.sis.model.beans.IepData">

 <!-- ************** -->
 <!-- PRINT AS DRAFT -->
 <!-- ************** -->
 
 <input name="printAsDraft" data-type="boolean" display-type="checkbox" display-name="report.iep.printDraft" default-value="false" />

 <!-- ****************** -->
 <!-- Signature of SPED Administrator -->
 <!-- ****************** -->
 
 <input name="spedAdministrator" data-type="boolean" display-type="checkbox" display-name="Signature of SPED Administrator" default-value="false" />
 
 <!-- ******************** -->
 <!-- PRINT SETTING COLUMN -->
 <!-- ******************** -->
 
 <input name="printSettingColumn" data-type="boolean" display-type="checkbox" display-name="Print setting column" default-value="false" />

 <!-- ******************** -->
 <!-- INCLUDE ADM1 COLUMN -->
 <!-- ******************** -->
 
 <input name="printAdm" data-type="boolean" display-type="checkbox" display-name="Include ADM1" default-value="true" />
 
 <!-- **************************** -->
 <!-- INCLUDE CONCERNS/VISION PAGE -->
 <!-- **************************** -->
 
 <input name="vision" data-type="boolean" display-type="checkbox" display-name="Vision (if std is 14+ also check Transition)" default-value="false" />

 <!-- **************************** -->
 <!-- INCLUDE STUDENT PROFILE PAGE -->
 <!-- **************************** -->
 
 <input name="profile" data-type="boolean" display-type="checkbox" display-name="Student Profile" default-value="false" />
 
 <!-- ******************* -->
 <!-- INCLUDE PLEPA PAGE  -->
 <!-- ******************* -->
 
 <input name="plaepA" data-type="boolean" display-type="checkbox" display-name="PL Acad" default-value="false" />
 
 <!-- ******************* -->
 <!-- INCLUDE PLEPB PAGE  -->
 <!-- ******************* -->
 
 <input name="plaepB" data-type="boolean" display-type="checkbox" display-name="Pl BSE" default-value="false" />

 <!-- ******************* -->
 <!-- INCLUDE PLEPC PAGE  -->
 <!-- ******************* -->
 
 <input name="plaepC" data-type="boolean" display-type="checkbox" display-name="PL Comm" default-value="false" />

 <!-- ******************* -->
 <!-- INCLUDE PLEPAA PAGE -->
 <!-- ******************* -->
 
 <input name="plaepAA" data-type="boolean" display-type="checkbox" display-name="PL AA" default-value="false" />

 <!-- *********************** -->
 <!-- INCLUDE TRANSITION PAGE -->
 <!-- *********************** -->
 
 <input name="transition" data-type="boolean" display-type="checkbox" display-name="Transition" default-value="false" />   
 
 <!-- *************************** -->
 <!-- INCLUDE ACCOMMODATIONS PAGE -->
 <!-- *************************** -->
 
 <input name="accommodations" data-type="boolean" display-type="checkbox" display-name="Accommodations/Modifications" default-value="false" />   
 
 <!-- ******************** -->
 <!-- INCLUDE GOALS PAGE   -->
 <!-- ******************** -->
 
 <input name="goals" data-type="boolean" display-type="checkbox" display-name="Goals" default-value="false" /> 

 <!-- ********************* -->
 <!-- INCLUDE SERVICES PAGE -->
 <!-- ********************* -->
 
 <input name="services" data-type="boolean" display-type="checkbox" display-name="Services" default-value="false" />
 
 <!-- ********************* -->
 <!-- INCLUDE SCHEDULE PAGE -->
 <!-- ********************* -->
 
 <input name="schedule" data-type="boolean" display-type="checkbox" display-name="Schedule" default-value="false" />   

 <!-- *********************** -->
 <!-- INCLUDE ASSESSMENT PAGE -->
 <!-- *********************** -->
 
 <input name="assessment" data-type="boolean" display-type="checkbox" display-name="Assessment" default-value="false" />
 
 <!-- ********************* -->
 <!-- INCLUDE RESPONSE PAGE -->
 <!-- ********************* -->
 
 <input name="response" data-type="boolean" display-type="checkbox" display-name="Response" default-value="false" />   

 <!-- ******************* -->
 <!-- Form Definition OID -->
 <!-- ******************* -->
 
 <input name="formDefinitionOid" data-type="string" display-type="hidden" default-value="fmdMaIep"/> 
 
</tool-input>