<!-- ************************************************************* -->
<!-- REPORT INPUT DEFINITIONS FOR THE "WORKFLOW COMPLIANCE" REPORT -->
<!-- ************************************************************* -->

<tool-input allow-org-select="true" allow-school-select="true">

 <!-- ************************************************** -->
 <!-- NUMBER OF DAYS UNTIL NEXT REVIEW TO SHOW A WARNING -->
 <input name="reviewDays" data-type="integer" display-type="hidden" default-value="60"/>

 <!-- ******************************************************** -->
 <!-- NUMBER OF DAYS UNTIL NEXT REEVALUATION TO SHOW A WARNING -->
 <input name="evalDays" data-type="integer" display-type="hidden" default-value="60"/>

 <!-- ***************** -->
 <!-- REVIEW AND REEVAL -->
 <!-- ***************** -->

 <input name="reviewAndEval" data-type="string" display-type="select" display-name="Review and Reevaluation" default-value="both" >
  <option value="both" display-name="Both"/>
  <option value="review" display-name="Review only"/>
  <option value="eval" display-name="Reevaluation only"/>
 </input>

 <!-- *********************** -->
 <!-- WARNINGS AND VIOLATIONS -->
 <!-- *********************** -->

 <input name="warningsAndViolations" data-type="string" display-type="select" display-name="Warnings and Violations" default-value="both" >
  <option value="both" display-name="Both"/>
  <option value="warnings" display-name="Warnings only"/>
  <option value="violations" display-name="Violations only"/>
 </input>

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
  <option value="name" display-name="report.shared.sort.name"/>
  <option value="startDate" display-name="Start Date"/>
 </input>

</tool-input>