<!-- ********************************************* -->
<!-- REPORT INPUT DEFINITIONS FOR THE "IEP" REPORT -->
<!-- ********************************************* -->

<tool-input district-support="false" context="com.x2dev.sis.model.beans.IepData">

 <!-- ************** -->
 <!-- PRINT AS DRAFT -->
 <!-- ************** -->
 
 <input name="printAsDraft" data-type="boolean" display-type="checkbox" display-name="report.iep.printDraft" default-value="false" />

 <!-- ****************** -->
 <!-- RESPONSE PAGE ONLY -->
 <!-- ****************** -->
 
 <input name="responseOnly" data-type="boolean" display-type="checkbox" display-name="report.iep.responseOnly" default-value="false" />
 
  <!-- ****************** -->
 <!-- Signature of SPED Administrator -->
 <!-- ****************** -->
 
 <input name="spedAdministrator" data-type="boolean" display-type="checkbox" display-name="Signature of SPED Administrator" default-value="false" />
 
 <!-- ******************** -->
 <!-- PRINT SETTING COLUMN -->
 <!-- ******************** -->
 
 <input name="printSettingColumn" data-type="boolean" display-type="checkbox" display-name="Print setting column" default-value="false" />

 <!-- ******************** -->
 <!-- INCLUDE ADM1 COLUMN -->
 <!-- ******************** -->
 
 <input name="printAdm" data-type="boolean" display-type="checkbox" display-name="Include ADM1" default-value="true" />

 <!-- *********************** -->
 <!-- INCLUDE TRANSITION PAGE -->
 <!-- *********************** -->

 <input name="transition" data-type="boolean" display-type="checkbox" display-name="Include Transition" default-value="true" />

 <!-- ******************* -->
 <!-- Form Definition OID -->
 <!-- ******************* -->
 
 <input name="formDefinitionOid" data-type="string" display-type="hidden" default-value="fmdMaIep      "/> 
 
 <!-- ********************** -->
 <!-- INCLUDE IEP PAGE PARAMS -->
 <!-- *********************** -->
 
 <input name="vision" data-type="boolean" display-type="hidden" display-name="Vision" default-value="true" />
 <input name="plaepA" data-type="boolean" display-type="hidden" display-name="Plep A" default-value="true" />
 <input name="plaepB" data-type="boolean" display-type="hidden" display-name="Plep B" default-value="true" />
 <input name="goals" data-type="boolean" display-type="hidden" display-name="Goals" default-value="true" /> 
 <input name="services" data-type="boolean" display-type="hidden" display-name="Services" default-value="true" />
 <input name="schedule" data-type="boolean" display-type="hidden" display-name="Schedule" default-value="true" />   
 <input name="assessment" data-type="boolean" display-type="hidden" display-name="Assessment" default-value="true" />
 <input name="response" data-type="boolean" display-type="hidden" display-name="Response" default-value="true" />   
 
 <!-- ***************** -->
 <!-- SAVE TO DOCUMENTS -->
 <!-- ***************** -->
 
 <input name="saveToDocumentsIEP" data-type="boolean" display-type="checkbox" display-name="label.toolInput.saveToDocuments" default-value="false" />
 <input name="documentName" data-type="string" display-type="hidden" default-value="IEPReport" />
 <input name="documentType" data-type="string" display-type="hidden" default-value="Special Ed" />
 
</tool-input>