<!-- ********************************************* -->
<!-- INPUT DEFINITIONS FOR THE "DOE MEPID" EXPORTS -->
<!-- ********************************************* -->

<tool-input allow-school-select="true" district-support="true">

 <!-- ************** -->
 <!-- DATA PROCEDURE -->
 <!-- ************** -->

 <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-MA-MEPID"/>

 <!-- ************************* -->
 <!-- VALIDATION SUMMARY REPORT -->
 <!-- ************************* -->

 <input name="summary" data-type="boolean" display-type="checkbox" display-name="report.state.report.summary"/>
 
 <!-- *********** -->
 <!-- EXPORT TYPE -->
 <!-- *********** -->

 <input name="exportType" data-type="integer" display-type="select" display-name="export.doe.mepidType">
  <option value="0" display-name="export.doe.mepidType.request" />
  <option value="1" display-name="export.doe.mepidType.lookup" />
  <option value="2" display-name="export.doe.mepidType.verification" />
 </input>

</tool-input>