<!-- ******************************************************* -->
<!-- INPUT DEFINITIONS FOR THE "I4SEE EOY ENROLLMENT" EXPORT -->
<!-- ******************************************************* -->

<tool-input allow-school-select="true" district-support="true" height="560">

 <!-- ************** -->
 <!-- DATA PROCEDURE -->
 <!-- ************** -->

 <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-NH-HSA" />

 <!-- *********** -->
 <!-- REPORT TYPE -->
 <!-- *********** -->
 <input name="reportType" data-type="integer" display-type="hidden" default-value="1" />

 <!-- *********** -->
 <!-- SCHOOL YEAR -->
 <!-- *********** -->

 <input name="schoolYearContext" data-type="string" display-type="hidden" display-name="report.shared.schoolYear" default-value="organization.currentContext.oid" default-value-source="session">
   <picklist field-id="ctxSchoolYear">
     <field id="ctxSchoolYear" sort="true" sort-direction="DESC" />
     <field id="ctxContextName" />
   </picklist>
 </input>

 <!-- *********** -->
 <!-- REPORT DATE -->
 <!-- *********** -->

 <input name="reportDate" data-type="date" display-type="hidden" display-name="export.doe.reportDate" default-value="districtYearEnd" />

 <!-- ********************* -->
 <!-- REQUIRE REPORT STATUS -->
 <!-- ********************* -->

 <input name="requireReportStatus" data-type="boolean" display-type="hidden" display-name="export.doe.requireReportStatus" default-value="true" />

 <!-- ******************* -->
 <!-- REQUIRE MEMBER DAYS -->
 <!-- ******************* -->

 <input name="requireMemberDay" data-type="boolean" display-type="hidden" display-name="export.doe.requireMemberDay" default-value="false" />

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->

 <input name="queryBy" data-type="integer" display-type="select" display-name="report.shared.query">
  <option value="0" display-name="report.shared.query.all" />
  <option value="1" display-name="report.shared.query.yog" />
  <option value="2" display-name="export.doe.selection.lasid" />
  <option value="3" display-name="export.doe.selection.sasid" />
  <option value="4" display-name="export.doe.selection.snapshot" />
  <disable input-name="queryString" if-parent-equals="0" />
 </input>
 <input name="queryString" data-type="string" display-type="text" display-name="report.shared.queryString" />

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="integer" display-type="select" display-name="report.shared.sort">
  <option value="0" display-name="report.shared.sort.name"/>
  <option value="1" display-name="report.shared.sort.yog"/>
  <option value="2" display-name="report.shared.sort.school"/>
  <option value="3" display-name="export.doe.sort.lasid"/>
  <option value="4" display-name="export.doe.sort.sasid"/>
 </input>

 <!-- **************** -->
 <!-- CALCULATE TOTALS -->
 <!-- **************** -->

 <input name="calculateTotals" data-type="boolean" display-type="hidden" display-name="export.doe.calculateTotals" default-value="true" />

 <!-- ************ -->
 <!-- EXPORT NAMES -->
 <!-- ************ -->

 <input name="includeStudentName" data-type="boolean" display-type="checkbox" display-name="Include names as 1st column" />
 
 <!-- ************** -->
 <!-- UPDATE RECORDS -->
 <!-- ************** -->

 <input name="updateRecords" data-type="boolean" display-type="hidden" display-name="export.doe.updateStudentRecords" default-value="false" />
 
</tool-input>