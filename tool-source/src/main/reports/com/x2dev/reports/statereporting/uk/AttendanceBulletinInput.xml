<!-- ****************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "ATTENDANCE BULLETIN" REPORT -->
<!-- ****************************************************** -->

<tool-input allow-school-select="true">

 <!-- **** -->
 <!-- DATE -->
 <!-- **** -->
 
 <input name="inputDate" data-type="date" display-type="date" display-name="report.shared.date" default-value="today"/>

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
  <option value="0" display-name="report.shared.sort.name"/>
  <option value="1" display-name="report.shared.sort.yog"/>
  <option value="2" display-name="report.shared.sort.homeroom"/>
 </input>
 
 <!-- ************************* -->
 <!-- RECORDS SELECTION OPTION  -->
 <!-- ************************* -->

<input name="includeSecondaryStudents" data-type="boolean" display-type="checkbox" display-name="report.student.secondaryAssociation" default-value="false" preference-key="sys.ssk.secondaryStudent" preference-value="true"/>

</tool-input>