<!-- ******************************************* -->
<!-- INPUT DEFINITIONS FOR THE "RI (RIDE) Discipline" REPORT -->
<!-- ******************************************* -->

<tool-input allow-school-select="true" district-support="true" height="560">

 <!-- ************** -->
 <!-- DATA PROCEDURE -->
 <!-- ************** -->

 <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-RI-DIS"/>

 <!-- ********************* -->
 <!-- ORGANIZATION LEVEL    -->
 <!-- ********************* -->

 <input name="orgOid" data-type="string" display-type="select" display-name="Organization" required="false">
  <picklist field-id="orgID" required="false">
   <field id="orgName" sort="true" />
   <field id="orgID" />
   <field id="relOrgOrdOid.ordName"/>
  </picklist>
 </input>

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->

 <input name="queryBy1" data-type="string" display-type="select" display-name="report.shared.query">
   <option value="##all" display-name="All" />
   <option value="localId" display-name="LASID" />
   <option value="stateId" display-name="SASID" />
   <option value="yog" display-name="YOG" />
   <option value="##snapshot" display-name="export.doe.selection.snapshot" />
   <disable input-name="queryString1" if-parent-equals="##all" />
 </input>
 
 <input name="queryString1" data-type="string" display-type="text" display-name="report.shared.queryString" />

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sortBy" data-type="string" display-type="select" display-name="report.shared.sort">
   <option value="nameView" display-name="Last name" />
   <option value="localId" display-name="LASID" />
   <option value="stateId" display-name="SASID" />
   <option value="schoolOid" display-name="School" />
   <option value="yog,nameView" display-name="YOG" />
 </input>
 
 <!-- *** -->
 <!-- Student must have a SASID? -->
 <!-- *** -->
 
 <input name="sasidStudentsOnly" data-type="boolean" display-type="checkbox" display-name="Student must have SASID" default-value="true" />
 
 <!-- ******************** -->
 <!-- SAVE RESULTS OPTIONS -->
 <!-- ******************** -->
 
 <input name="saveResults" data-type="boolean" display-type="checkbox" display-name="Save Results" default-value="false" />

</tool-input>