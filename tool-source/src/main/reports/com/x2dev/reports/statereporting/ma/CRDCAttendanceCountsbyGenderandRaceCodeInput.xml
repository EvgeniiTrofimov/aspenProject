<tool-input>

    <!-- ************** -->
    <!-- SQL QUERY TYPE -->
    <!-- ************** -->

    <input name="queryType" data-type="string" display-type="select"
        display-name="Query Type">
        <option value="byGenderRace" display-name="Counts" />
        <option value="byStudent" display-name="Supporting Student Detail" />

    </input>

    <input name="startDate" data-type="date" display-type="date" display-name="Start Date" default-value="districtYearStart" />
    <input name="endDate" data-type="date" display-type="date" display-name="End Date" default-value="districtYearEnd" />


</tool-input>