<!-- ************************************************************* -->
<!-- INPUT DEFINITIONS FOR THE RI Special Education Services Export -->
<!-- ************************************************************* -->

<tool-input allow-school-select="false" district-support="true">

 <!-- ************** -->
 <!-- DATA PROCEDURE -->
 <!-- ************** -->

 <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-RI-SPED-SVC"/>

 <!-- ********************* -->
 <!-- REPORT DATE           -->
 <!-- ********************* -->

 <input name="reportDate" data-type="date" display-type="date" display-name="Report Date" default-value="today" />
 
 <!-- ******************************* -->
 <!-- BYPASS STATE VALIDATION RULES   -->
 <!-- ******************************* -->

 <input name="bypassStateRules" data-type="boolean" display-type="checkbox" display-name="Bypass state validation rules" default-value="false" />

 <!-- **************************** -->
 <!-- ADJUST OVERLAPPING SERVICES  -->
 <!-- **************************** -->

 <input name="adjustServiceDates" data-type="boolean" display-type="checkbox" display-name="Adjust Service Dates" default-value="true" />
 
 <!-- ********************* -->
 <!-- SENIOR GRADUATION DATE -->
 <!-- ********************* -->

 <input name="seniorGraduationDate" data-type="date" display-type="date" display-name="Senior Graduation Date" required="false" />
 
 <!-- ********************* -->
 <!-- SUMMER EXIT START DATE -->
 <!-- ********************* -->

 <input name="summerExitStartDate" data-type="date" display-type="date" display-name="Summer Exit Start Date" required="false" />

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="integer" display-type="select" display-name="report.shared.sort">
  <option value="0" display-name="report.shared.sort.name"/>
  <option value="1" display-name="report.shared.sort.yog"/>
  <option value="2" display-name="report.shared.sort.school"/>
  <option value="3" display-name="export.doe.sort.lasid"/>
  <option value="3" display-name="export.doe.sort.sasid"/>
 </input>

</tool-input>