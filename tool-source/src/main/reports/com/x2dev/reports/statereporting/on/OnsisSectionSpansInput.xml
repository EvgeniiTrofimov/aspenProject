<?xml version="1.0" encoding="UTF-8"?>

<tool-input allow-school-select="true" allow-org-select="false" district-support="false" context="com.x2dev.sis.model.beans.MasterSchedule" >
  <!-- ************** -->
  <!-- SELECT OPTIONS -->
  <!-- ************** -->

  <input name="queryBy" data-type="string" display-type="select" display-name="report.shared.query">
    <option value="##current" display-name="report.shared.query.currentSelection" context-dependent="true" />
    <option value="##all" display-name="report.shared.query.all" />
  </input>

  <!-- ************ -->
  <!-- SORT OPTIONS -->
  <!-- ************ -->

  <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
    <option value="number" display-name="report.shared.Course.Number" />
    <option value="description" display-name="report.shared.description" />
  </input>

</tool-input>