<!-- **************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "CA CSR DAILY REPORT" -->
<!-- **************************************************** -->

<tool-input allow-school-select="true" district-support="true" height="560" context="com.x2dev.sis.model.beans.SisStudent"> 

  <!-- ************* -->	
  <!-- HOMEROOM ONLY -->	
  <!-- ************* -->	
<input name="applyFilter" data-type="boolean" display-type="checkbox" display-name=" Homeroom Only (elementary schools only)" default-value="true" />
  
  <!-- ***** -->
  <!-- GRADE -->
  <!-- ***** --> 
<input name="grade" data-type="string" display-type="select" multiple="true" display-name="Grade">
   <option value="all" display-name="All grades" />
   <option value="01" display-name="01" />
   <option value="02" display-name="02" />
   <option value="03" display-name="03" />
   <option value="04" display-name="04" />
   <option value="00" display-name="K" />
   <option value="TK" display-name="TK" />
</input>

</tool-input>