<!-- ******************************************************* -->
<!-- INPUT DEFINITIONS FOR THE "I4SEE COURSE [CATE]" EXPORT  -->
<!-- ******************************************************* -->

<tool-input allow-school-select="true" district-support="true" height="560">

 <!-- ************** -->
 <!-- DATA PROCEDURE -->
 <!-- ************** -->
 <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-NH-CRS" />

 <!--  ************* -->
 <!--  REPORT TYPE   -->
 <!--  ************* -->
 <input name="reportType" data-type="integer" display-type="hidden" display-name="Course Export" default-value="1" />

<input name="sortBy" data-type="string" display-type="select" display-name="Sorting">
<option value="courseView,sectionNumber,termView" display-name="Course Code" />
<option value="schoolCourse.school,courseView,sectionNumber,termView" display-name="Sort by School" />
</input>

<input name="queryString1" data-type="string" display-type="text" display-name="Filter by" required="false"/>

 <!-- ************************* -->
 <!-- VALIDATION SUMMARY REPORT -->
 <!-- ************************* -->

 <input name="summary" data-type="boolean" display-type="checkbox" display-name="report.state.report.summary"/>

</tool-input>