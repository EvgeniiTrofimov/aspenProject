<!-- REPORT INPUT DEFINITIONS FOR THE "INVALID ENROLLMENT" REPORT -->
<!-- ************************************************************ -->

<tool-input allow-school-select="false">

 <!-- ************* -->
 <!-- PROBLEM FLAGS -->
 <!-- ************* -->

 <input name="inactiveMember" data-type="boolean" display-type="checkbox" display-name="report.enrollment.inactiveMember" default-value="true"/>
 <input name="activeNonmember" data-type="boolean" display-type="checkbox" display-name="report.enrollment.activeNonMember" default-value="true"/>
 <input name="schoolDiscrepancy" data-type="boolean" display-type="checkbox" display-name="report.enrollment.schoolDiscrepancy" default-value="true"/>
 <input name="archivedMember" data-type="boolean" display-type="checkbox" display-name="report.enrollment.archivedMember" default-value="false"/>

 <!-- ********************** -->
 <!-- INCLUDE ARCHIVE SCHOOL -->
 <!-- ********************** -->

 <input name="includeArchive" data-type="boolean" display-type="checkbox" display-name="report.enrollment.includeArchive" default-value="false"/>

</tool-input>