<!-- ************************************************************ -->
<!-- INPUT DEFINITIONS FOR THE "START OF SCHOOL READINESS" REPORT -->
<!-- ************************************************************ -->

<tool-input district-support="true" allow-school-select="true" allow-org-select="true">
 
 <!-- ********************** -->
 <!-- SCHOOL YEAR START DATE -->
 <!-- ********************** -->

 <input name="schoolYear" data-type="integer" display-type="text" display-name="School year" />
 
 <!-- ************** -->
 <!-- PRE-REG STATUS -->
 <!-- ************** -->
 
 <input name="preregStatus" data-type="string" display-type="reference" reference-table="rtbEnrStatus" display-name="Pre-reg status" default-value="PreReg" />
 
 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="details" data-type="integer" display-type="select" display-name="Details to display">
  <option value="0" display-name="All"/>
  <option value="3" display-name="Errors"/>
  <option value="2" display-name="Warnings"/>
 </input>
 
 <!-- ************ -->
 <!-- SUMMARY ONLY -->
 <!-- ************ -->

 <input name="summaryOnly" data-type="boolean" display-type="checkbox" display-name="Summary only" default-value="false" />

</tool-input>