<?xml version="1.0" encoding="UTF-8"?>

<!-- ******************************************************************* -->
<!-- REPORT INPUT DEFINITIONS FOR THE "CLASS ATTENDANCE HISTORY" REPORT  -->
<!-- ******************************************************************* -->

<tool-input allow-school-select="false">

  <!-- ********** -->
  <!-- START DATE -->
  <!-- ********** -->
  
  <input name="startDate" data-type="date" display-type="date" display-name="report.shared.startDate" default-value="districtYearStart" />
  
  <!-- ******** -->
  <!-- END DATE -->
  <!-- ******** -->
  
  <input name="endDate" data-type="date" display-type="date" display-name="report.shared.endDate" default-value="today" />

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->

 <input name="queryBy" data-type="integer" display-type="select" display-name="Print for">
  <option value="0" display-name="Current section" />
  <option value="1" display-name="report.shared.query.all"/>
 </input>

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
  <option value="masterSchedule.courseView, student.nameView, date" display-name="report.shared.sort.name"/>
  <option value="masterSchedule.courseView, date, student.nameView" display-name="report.shared.sort.date"/>
 </input>
  
</tool-input>