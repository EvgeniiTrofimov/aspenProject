<!-- ************************************************************ -->
<!-- INPUT DEFINITIONS FOR THE "STUDENTS WITHOUT REQUESTS" REPORT -->
<!-- ************************************************************ -->

<tool-input>

 <!-- ************** -->
 <!-- ACTIVE ONLY    -->
 <!-- ************** -->

 <input name="activeOnly" data-type="boolean" display-type="checkbox" display-name="report.shared.activeStudentsOnly" default-value="true" />
 
 <!-- ************** -->
 <!-- SCHEDULED ONLY -->
 <!-- ************** -->

 <input name="scheduledOnly" data-type="boolean" display-type="checkbox" display-name="report.shared.scheduledStudentsOnly" default-value="true" />

 <!-- ************** -->
 <!-- PRIMARY ONLY -->
 <!-- ************** -->

 <input name="primaryOnly" data-type="boolean" display-type="checkbox" display-name="report.shared.primaryStudentsOnly" default-value="true" />

 <!-- ******** -->
 <!-- SNAPSHOT -->
 <!-- ******** -->

 <input name="snapshotName" data-type="string" display-type="text" display-name="report.shared.snapshotName" required="false" />
 <input name="snapshotOwner" data-type="integer" display-type="select" display-name="report.shared.snapshotOwner" default-value="6">
  <option value="7" display-name="User"/>
  <option value="6" display-name="School"/>
  <option value="1" display-name="District" />
 </input>

 <!-- ****************** -->
 <!-- GROUP BY COUNSELOR -->
 <!-- ****************** -->

 <input name="groupByCounselor" data-type="boolean" display-type="checkbox" display-name="report.schedule.ignoreStudies" default-value="false" />

</tool-input>