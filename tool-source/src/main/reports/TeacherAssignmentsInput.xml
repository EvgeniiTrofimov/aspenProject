<!-- ****************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "TEACHER ASSIGNMENTS" REPORT -->
<!-- ****************************************************** -->

<tool-input>

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->

 <input name="queryBy" data-type="integer" display-type="select" display-name="report.shared.query.teacher">
  <option value="0" display-name="report.shared.query.all"/>
  <option value="1" display-name="report.shared.query.team"/>
  <option value="2" display-name="report.shared.query.house"/>
  <option value="3" display-name="report.shared.query.platoon"/>
  <disable input-name="queryString" if-parent-equals="0" />
 </input>
 <input name="queryString" data-type="string" display-type="text" display-name="report.shared.queryString"/>

 <!-- *********************** -->
 <!-- PRESCHEDULED TERMS ONLY-->
 <!-- *********************** -->

 <input name="prescheduledTermsOnly" data-type="boolean" display-type="checkbox" display-name="report.shared.prescheduledTermsOnly" default-value="true" />

</tool-input>