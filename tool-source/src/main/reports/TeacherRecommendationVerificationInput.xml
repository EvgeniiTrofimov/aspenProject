<tool-input allow-school-select="false">

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->
 <input name="queryString" data-type="string" display-type="text" display-name="report.shared.query.department" default-value=" "/>

 <!-- **************************** -->
 <!-- SHOW NON-RECOMMENDATION ONLY -->
 <!-- **************************** -->

 <input name="nonRecommendationOnly" data-type="boolean" display-type="checkbox" display-name="report.shared.showNoRecommendation" default-value="false"/>

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
  <option value="staffView, courseView" display-name="Teacher" />
  <option value="courseView" display-name="Section" />
 </input>

</tool-input>