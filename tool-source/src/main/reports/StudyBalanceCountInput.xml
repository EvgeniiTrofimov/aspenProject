<!-- ************************************************************* -->
<!-- REPORT INPUT DEFINITIONS FOR THE "STUDY BALANCE COUNT" REPORT -->
<!-- ************************************************************* -->

<tool-input allow-school-select="true" district-support="false">

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->

 <input name="queryBy" data-type="string" display-type="select" display-name="report.schedule.query">
  <option value="##all" display-name="report.shared.query.all"/>
  <option value="courseView" display-name="report.schedule.query.course"/>
  <option value="sectionNumber" display-name="report.schedule.query.section"/>
  <disable input-name="queryString" if-parent-equals="##all" />
 </input>
 <input name="queryString" data-type="string" display-type="text" display-name="report.shared.queryString"/>

</tool-input>