<!-- ********************************************* -->
<!-- INPUT DEFINITIONS FOR THE "HEALTH LOG" REPORT -->
<!-- ********************************************* -->

<tool-input allow-school-select="false">

 <!-- **** -->
 <!-- DATE -->
 <!-- **** -->
 
 <input name="date" data-type="date" display-type="date" display-name="report.shared.date" default-value="today"/>

 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
  <option value="timeIn" display-name="report.healthLog.sort.timeIn" />
  <option value="nameView, timeIn" display-name="report.shared.student" />
  <option value="visitType, timeIn" display-name="report.healthLog.sort.reason" />
  <option value="primaryComplaintCode, timeIn" display-name="report.healthLog.sort.complaint" />
  <option value="primaryTreatmentCode, timeIn" display-name="report.healthLog.sort.treatment" />
 </input>
 
</tool-input>