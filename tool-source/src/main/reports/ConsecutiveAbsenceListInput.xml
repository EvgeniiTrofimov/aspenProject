<!-- ************************************************************************* -->
<!-- REPORT INPUT DEFINITIONS FOR THE "ATTENDANCE BULLETIN WITH TOTALS" REPORT -->
<!-- ************************************************************************* -->

<tool-input allow-school-select="true">

 <!-- ********** -->
 <!-- DATE RANGE -->
 <!-- ********** -->
 
 <input name="startDate" data-type="date" display-type="date" display-name="report.shared.startDate" default-value="districtYearStart" />
 <input name="endDate" data-type="date" display-type="date" display-name="report.shared.endDate" default-value="today" />

 <!-- *********** -->
 <!-- COUNT PARAM -->
 <!-- *********** -->
 
 <input name="count" data-type="integer" display-type="integer" display-name="report.shared.count" default-value="5" />
<input name="excludeExcused" data-type="boolean" display-type="checkbox" display-name="report.student.excludeExcused" default-value="false" />
 
 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->

 <input name="sort" data-type="integer" display-type="select" display-name="report.shared.sort" >
  <option value="0" display-name="report.shared.sort.name" />
  <option value="1" display-name="report.shared.sort.yog" />
  <option value="2" display-name="report.shared.sort.homeroom" />
  <option value="3" display-name="report.shared.sort.count" />
 </input>
 
 <!-- ************************* -->
 <!-- RECORDS SELECTION OPTION  -->
 <!-- ************************* -->

<input name="includeSecondaryStudents" data-type="boolean" display-type="checkbox" display-name="report.student.secondaryAssociation" default-value="false" preference-key="sys.ssk.secondaryStudent" preference-value="true" />

</tool-input>