<!-- ***************************************************************** -->
<!-- REPORT INPUT DEFINITIONS FOR THE "STAFF LIST" AND RELATED REPORTS -->
<!-- ***************************************************************** -->

<tool-input context="com.x2dev.sis.model.beans.StaffScheduleAttributes">

 <!-- ************** -->
 <!-- SELECT OPTIONS -->
 <!-- ************** -->

 <input name="queryBy" data-type="string" display-type="select" display-name="Staff to include">
  <option value="##current" display-name="report.shared.query.currentSelection" context-dependent="true"/>
  <option value="##all" display-name="report.shared.query.all"/>
 </input>
 
 <!-- ************ -->
 <!-- SORT OPTIONS -->
 <!-- ************ -->
 <input name="sort" data-type="string" display-type="select" display-name="report.shared.sort">
  <option value="##current" display-name="report.shared.sort.currentSort" context-dependent="true"/> 
  <option value="staff.nameView" display-name="report.shared.sort.name"/>
  <option value="staff.departmentCode, staff.nameView" display-name="report.shared.sort.department"/>
 </input>

</tool-input>
