<!-- ********************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "DAILY ATTENDANCE TOTALS" REPORT -->
<!-- ********************************************************** -->

<tool-input allow-school-select="true">

 <!-- ********** -->
 <!-- DATE RANGE -->
 <!-- ********** -->
 
 <input name="startDate" data-type="date" display-type="date" display-name="report.shared.startDate" default-value="firstOfMonth" />
 <input name="endDate" data-type="date" display-type="date" display-name="report.shared.endDate" default-value="today" />
 
 <!-- ********* -->
 <!-- YOG RANGE -->
 <!-- ********* -->
 
 <input name="startYog" data-type="integer" display-type="text" display-name="report.shared.startYog" required="false" />
 <input name="endYog" data-type="integer" display-type="text" display-name="report.shared.endYog" required="false" />
 
 <!-- ********** -->
 <!-- SORT ORDER -->
 <!-- ********** -->
 
 <input name="sort" data-type="integer" display-type="select" display-name="report.shared.sort">
  <option value="0" display-name="report.shared.sort.code" />
  <option value="1" display-name="report.shared.sort.count" />
 </input>

 <!-- ******** -->
 <!-- GROUPING -->
 <!-- ******** -->
 
 <input name="groupBySchool" data-type="boolean" display-type="checkbox" display-name="report.shared.groupBy.school" default-value="true" />
 <input name="groupByYog" data-type="boolean" display-type="checkbox" display-name="report.shared.groupBy.yog" default-value="true" />

</tool-input>