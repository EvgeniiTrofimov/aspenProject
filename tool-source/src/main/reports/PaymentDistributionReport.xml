<?xml version="1.0" encoding="UTF-8"?>

<!-- ************************************************ -->
<!-- INPUT DEFINITION FOR THE "PAYMENT DISTRIBUTION DETAIL" REPORT -->
<!-- ************************************************ -->

<tool-input allow-school-select="true" district-support="false" height="400">

 <!-- ********** -->
 <!-- DATE RANGE -->
 <!-- ********** -->
 
 <input name="startDate" data-type="date" display-type="date" display-name="report.shared.startDate" default-value="today"/>
 <input name="endDate" data-type="date" display-type="date" display-name="report.shared.endDate" default-value="today" />
 
 <!-- ******** -->
 <!-- GROUP BY -->
 <!-- ******** -->
 
 <input name="groupBy" data-type="integer" display-type="select" display-name="Group by">
  <option value="1" display-name="Fee Type, Payment Method" />
  <option value="2" display-name="Fee Type, Student Name" />
  <option value="3" display-name="Fee Type, Payment Method, Student Name" />
  <option value="4" display-name="Payment Method, Fee Type, Student Name" />
  <option value="5" display-name="Summary, Payment Method, Student Name" />
  <option value="6" display-name="Summary, Fee Type, Student Name" />
 </input>
 
</tool-input>
