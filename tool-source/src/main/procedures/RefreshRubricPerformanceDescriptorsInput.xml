<tool-input>
	<input name="matchBasis" data-type="integer" display-type="select" display-name="Match Basis">
		<option value="1" display-name="Rating ID" />
		<option value="0" display-name="Points" />
	</input>
	<input name="addNewRatings" data-type="boolean" display-type="checkbox" display-name="Add New Ratings" default-value="true" />
	<input name="dropMissingRatings" data-type="boolean" display-type="checkbox" display-name="Drop Missing Ratings" default-value="true" />
	<input name="refreshChildren" data-type="boolean" display-type="checkbox" display-name="Refresh Children" default-value="false" />
</tool-input>