<?xml version="1.0" encoding="UTF-8"?>

<!-- ************************************************ -->
<!-- INPUT DEFINITION FOR THE "COMMENT BANK CODE IMPORT" -->
<!-- ************************************************ -->

<tool-input>

  <!-- ********************************** -->
  <!-- Comment Bank Table Name - required -->
  <!-- ********************************** -->
  
  <input name="cbtName" data-type="string"  display-type="text" 
         display-name="Comment Bank Table Name" required="true" />
  
  <!-- ************************************************** -->
  <!-- Categories - Category 1 required, 2 and 3 optional -->
  <!-- ************************************************** -->
  
  <input name="cbtCategory1" data-type="string" display-type="text" 
         display-name="Category 1" required="true" />
  
  <input name="cbtCategory2" data-type="string" display-type="text"
         display-name="Category 2" required="false" />
  
  <input name="cbtCategory3" data-type="string" display-type="text" 
         display-name="Category 3" required="false" />
 
</tool-input>