<tool-input >
  
  <!-- ********************* -->
  <!--  Entity type select   -->
  <!-- ********************* -->
  <input name="entityType" data-type="string" display-type="select" display-name="Entity type" required="true">
    <option value="Student" display-name="Student" />
    <option value="Staff" display-name="Staff" />
    <option value="Parent" display-name="Parent" />
  </input>
  
  <input name="commitChanges" data-type="boolean" display-type="checkbox" display-name="Commit any changes" default-value="false"/>

  <input name="assignNew" data-type="boolean" display-type="checkbox" display-name="Assign new if no match found" default-value="false"/>
  
  <input name="count" data-type="integer" display-type="text" display-name="Limit count" required="true" default-value="0" />

  <!-- **************** -->
  <!-- ED-FI ZONE USED  -->
  <!-- **************** -->
  <input name="edFiZone" data-type="string" display-type="hidden" default-value="TN-IDENTITY"/>
  
</tool-input>