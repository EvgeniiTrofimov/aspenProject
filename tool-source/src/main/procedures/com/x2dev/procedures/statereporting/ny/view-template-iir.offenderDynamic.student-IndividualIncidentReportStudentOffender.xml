<?xml version="1.0" encoding="UTF-8"?>
<view-template context="iir.offenderDynamic.student" name="Individual Incident Report Student Offender" locked="false" extendedDataDictionaryOid="ddxNYIIR">
  <template>
    <tab name="iir">
      <row>
        <column>
          <property id="relUdcStdOid.stdViewName">
            <picklist relationship="relUdcStdOid">
              <field id="stdViewName" sort="true" />
              <filter field="stdEnrStatus" operator="equals" source="preference" value="sys.std.activeCode" />
            </picklist>
          </property>
          <property alias="irr-offender-disabilities" />
          <property alias="irr-offender-weapon" />
          <property alias="irr-offender-discipline-action" />
        </column>
      </row>
      <row>
        <!-- Actions -->
        <block>
          <line border="none">
            <cell border="none" cell-span="5" line-span="1" shaded="true">
              <text bold="true">Type of Action</text>
            </cell>
            <cell border="none" cell-span="1" line-span="1" shaded="true">
              <text bold="true">Duration</text>
            </cell>
          </line>
          <line border="none">
            <cell border="full" cell-span="5" line-span="1">
              <property alias="irr-offender-counseling" label-display="left" />
            </cell>
            <cell border="full" cell-span="1" line-span="1" align="center">
              <property alias="irr-offender-counseling-time" label-display="hide" />
            </cell>
          </line>
          <line border="none">
            <cell border="full" cell-span="5" line-span="1">
              <property alias="irr-offender-teach-remove" label-display="left" />
            </cell>
            <cell border="full" cell-span="1" line-span="1" align="center">
              <property alias="irr-offender-teach-remove-time" label-display="hide" />
            </cell>
          </line>
          <line border="none">
            <cell border="full" cell-span="5" line-span="1">
              <property alias="irr-offender-iss" label-display="left" />
            </cell>
            <cell border="full" cell-span="1" line-span="1" align="center">
              <property alias="irr-offender-iss-time" label-display="hide" />
            </cell>
          </line>
          <line border="none">
            <cell border="full" cell-span="5" line-span="1">
              <property alias="irr-offender-oss" label-display="left" />
            </cell>
            <cell border="full" cell-span="1" line-span="1" align="center">
              <property alias="irr-offender-oss-time" label-display="hide" />
            </cell>
          </line>
          <line border="none">
            <cell border="full" cell-span="5" line-span="1">
              <property alias="irr-offender-alt" label-display="left" />
            </cell>
            <cell border="full" cell-span="1" line-span="1" align="center">
              <text />
            </cell>
          </line>
          <line border="none">
            <cell border="full" cell-span="5" line-span="1">
              <property alias="irr-offender-service" label-display="left" />
            </cell>
            <cell border="full" cell-span="1" line-span="1" align="center">
              <property alias="irr-offender-service-time" label-display="hide" />
            </cell>
          </line>
          <line border="none">
            <cell border="full" cell-span="5" line-span="1">
              <property alias="irr-offender-justice" label-display="left" />
            </cell>
            <cell border="full" cell-span="1" line-span="1" align="center">
              <text />
            </cell>
          </line>
          <line border="none">
            <cell border="full" cell-span="5" line-span="1">
              <property alias="irr-offender-law-enforcement" label-display="left" />
            </cell>
            <cell border="full" cell-span="1" line-span="1" align="center">
              <text />
            </cell>
          </line>
        </block>
      </row>
    </tab>
  </template>
</view-template>

