<!-- ****************************************************** -->
<!-- INPUT DEFINITIONS FOR THE MARYLAND HABITUAL TRUANT EXPORT    -->
<!-- ****************************************************** -->

<tool-input allow-school-select="false" district-support="true" height="500">

 <!-- ************** -->
 <!-- DATA PROCEDURE -->
 <!-- ************** -->

 <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-MD-TRUANT"/>

 <!-- *************** -->
 <!-- RANGE DATES -->
 <!-- *************** -->

 <input name="beginDate" data-type="date" display-type="date" display-name="Attendance Begin Date" />
 <input name="endDate" data-type="date" display-type="date" display-name="Attendance End Date" default-value="today" />

 <!-- ******************** -->
 <!-- SAVE RESULTS OPTIONS -->
 <!-- ******************** -->
 
 <input name="saveResults" data-type="boolean" display-type="checkbox" display-name="Save Results" default-value="false" />

</tool-input>