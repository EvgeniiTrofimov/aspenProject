<!-- INPUT DEFINITIONS FOR THE "Easy IEP Student Export" -->
<!-- ******************************************************************* -->

<tool-input allow-school-select="true" context="com.x2dev.sis.model.beans.SisStudent">

	<input name="emergencyPriorityIndicator" data-type="boolean" display-type="checkbox" display-name="Emergency Priority Filter" default-value="false" >
	  <disable input-name="emergencyPriorityFilter" if-parent-equals="false" />
	</input>
	<input name="emergencyPriorityFilter" data-type="string" display-type="text" display-name="Priorities to Include" default-value="0,1,2" required="false"/>

    <input name="includeAddr2" data-type="boolean" display-type="checkbox" display-name="Include Address Line 2" default-value="false" />
    
</tool-input>