<?xml version="1.0" encoding="UTF-8"?>
<view-template context="dynamic.maSimsHelper.8100" name="MA SIMS Error 8100" locked="false">
  <template>
    <tab name="tab.student.std.list.detail">
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="large">&lt;span style="color:#00a3cc;"&gt;Error Code:&lt;/span&gt;</text>
            <text bold="true" font-size="medium">&amp;nbsp;8100</text>
            <spacer height="15" />
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer />
            </cell>
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="medium">Error Description:</text>
            <text font-size="medium">&amp;nbsp;Public or charter School/Grade not in reporting district</text>
            <spacer height="15" />
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="medium">Steps to resolve:</text>
            <spacer height="15" />
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer width="15" />
              <text font-size="medium">1. Verify that the grade level being reported to the state is a grade level that school has set up. This can be checked in School View &gt; School &gt; Setup &gt; Details.</text>
            </cell>
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer width="15" />
              <text font-size="medium">2. Year of graduation needs to match the reporting grade on most recent "E" membership record.</text>
            </cell>
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="large">&lt;span style="color:#00a3cc;"&gt;Fields To Review Below:&lt;/span&gt;</text>
          </line>
          <line border="none">
            <property alias="DOE 16" label="DOE 16" label-short="false" />
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="none">
            <text underline="true" font-size="medium">ENROLLMENT HISTORY</text>
          </line>
          <line border="none">
            <spacer height="2" />
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <embedded-list id="student-enrollment" relationship="relStdEnrOid" selection-type="none" embedded-edit="true" show-blob-text="true" warn-on-delete="true" independent-save="true">
                <field alias="enr-date" sort="true" />
                <field id="enrEnrType" />
                <field id="enrEnrStatus" />
                <field id="enrEnrCode" />
                <field id="relEnrSklOid.sklSchoolName" />
                <field alias="ENR Prev DOE Adjusted Status" />
                <field alias="ENR Prev DOE Adjusted School" />
                <field alias="ENR Prev DOE Adjusted Member" />
                <field alias="ENR Prev DOE Adjusted Attend" />
                <field alias="ENR Prev DOE 13" />
                <field alias="ENR Prev DOE 11" />
                <field alias="ENR Prev Calendar" />
              </embedded-list>
            </cell>
          </line>
        </block>
      </row>
    </tab>
  </template>
</view-template>

