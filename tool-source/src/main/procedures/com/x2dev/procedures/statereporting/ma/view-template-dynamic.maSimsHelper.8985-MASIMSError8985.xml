<?xml version="1.0" encoding="UTF-8"?>
<view-template context="dynamic.maSimsHelper.8985" name="MA SIMS Error 8985" locked="false">
  <template>
    <tab name="tab.student.std.list.detail">
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="large">&lt;span style="color:#00a3cc;"&gt;Error Code:&lt;/span&gt;</text>
            <text bold="true" font-size="medium">8985</text>
            <spacer height="15" />
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer />
            </cell>
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="medium">Error Description:</text>
            <text font-size="medium">Enrollment Status(DOE012) = 40 requires a SPED Level of Need Code (DOE038)</text>
            <spacer height="15" />
          </line>
          <line border="none">
            <cell align="left" border="none" cell-span="1" line-span="1">
              <text font-size="medium">DOE 40 - Special Education - Evaluation Results cannot have a state code of 00. Must have a code other than 00.</text>
              <spacer height="15" />
            </cell>
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="medium">Steps to resolve:</text>
            <spacer height="15" />
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer width="15" />
              <text font-size="medium">1. Update the student's DOE 12 to Active.</text>
            </cell>
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer width="15" />
              <text font-size="medium">2. Update Adjusted Status to Not Enrolled/SPED Only or the equivalent value for your district.</text>
            </cell>
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer width="15" />
              <text font-size="medium">3. Check "Adjusted Service Only" on the most recent membership record.</text>
            </cell>
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <cell border="none" cell-span="1" line-span="1" shaded="true">
              <text bold="true" font-size="medium">Note:</text>
            </cell>
          </line>
          <line border="bottom">
            <cell border="none" cell-span="1" line-span="1">
              <text font-size="medium">These errors won't clear until SPED is pulled mid-day/overnight.</text>
              <spacer width="15" />
            </cell>
          </line>
          <line border="bottom">
            <cell border="none" cell-span="1" line-span="1">
              <text font-size="medium">SPED Level of Need Code (DOE038) cannot be 500 when Enrollment Status (DOE012) = 40 or 41.</text>
              <spacer width="15" />
            </cell>
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="large">&lt;span style="color:#00a3cc;"&gt;Fields To Review Below:&lt;/span&gt;</text>
          </line>
          <line border="none">
            <property alias="DOE 12" label="DOE 12" label-short="false" />
          </line>
          <line border="none">
            <property alias="DOE Adjusted Status" label="Adjusted Status" label-short="false" />
          </line>
          <line border="none">
            <property alias="DOE 38" label="DOE 38" label-short="false" />
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="none">
            <text underline="true" font-size="medium">ENROLLMENT HISTORY</text>
          </line>
          <line border="none">
            <spacer height="2" />
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <embedded-list id="student-enrollment" relationship="relStdEnrOid" selection-type="none" embedded-edit="true" show-blob-text="true" warn-on-delete="true" independent-save="true">
                <field alias="enr-date" sort="true" />
                <field id="enrEnrType" />
                <field id="enrEnrStatus" />
                <field id="enrEnrCode" />
                <field id="relEnrSklOid.sklSchoolName" />
                <field alias="ENR Prev DOE Adjusted Status" />
                <field alias="ENR Prev DOE Adjusted School" />
                <field alias="ENR Prev DOE Adjusted Member" />
                <field alias="ENR Prev DOE Adjusted Attend" />
                <field alias="ENR Prev DOE 13" />
                <field alias="ENR Prev DOE 11" />
                <field alias="ENR Prev Calendar" />
              </embedded-list>
            </cell>
          </line>
        </block>
      </row>
    </tab>
  </template>
</view-template>

