<!-- ******************************************************************* -->
<!-- INPUT DEFINITIONS FOR THE MD PARCC ASSESSMENT IMPORT                -->
<!-- ******************************************************************* -->

<tool-input allow-school-select="false" district-support="true">

    <!-- ********************* -->
    <!-- ASSESSMENT DEFINITION -->
    <!-- ********************* -->
    <input name="asdOid" data-type="string" display-type="picklist" display-name="Assesment Definitions">
     <picklist field-id="asdName" required="true" >
      <field id="asdName" sort="true" />
      <filter field="asdID" operator="equals" value="NJSLA"/>
      </picklist>
    </input>

    <!-- ***************** -->
    <!--    SASID FIELD    -->
    <!-- ***************** -->
    <input name="sasidField" data-type="character" display-type="hidden" default-value="StateStudentIdentifier" />
 
    <!-- *********************** -->
    <!--    SCHOOL YEAR FIELD    -->
    <!-- *********************** -->
    <input name="schoolYearField" data-type="character" display-type="hidden" default-value="AssessmentYear" />
 
    <!-- ****************** -->
    <!--    PERIOD FIELD    -->
    <!-- ****************** -->
    <input name="periodField" data-type="character" display-type="hidden" default-value="Period" />
 
    <!-- ********************* -->
    <!--    TEST CODE FIELD    -->
    <!-- ********************* -->
    <input name="testCodeField" data-type="character" display-type="hidden" default-value="TestCode" />
 
    <!-- ********************* -->
    <!--    TEST DATE FIELD    -->
    <!-- ********************* -->
    <input name="testDateField" data-type="character" display-type="hidden" default-value="Unit1OnlineTestStartDateTime" />
 
    <!-- ********************* -->
    <!--    TEST DATE FORMAT   -->
    <!-- ********************* -->
    <input name="testDateFormat" data-type="character" display-type="hidden" default-value="MM/dd/yyyy HH:mm" />
 
    <!-- ***************** -->
    <!--    DEBUG FIELD    -->
    <!-- ***************** -->
    <input name="debug" data-type="boolean" display-type="hidden" default-value="false" />
 
</tool-input>