<!-- ************************************************************** -->
<!-- INPUT DEFINITIONS FOR THE EXPORT RESULTS COMPARISON EXPORT     -->
<!-- ************************************************************** -->

<tool-input allow-school-select="false" district-support="true" height="560">
   
    <!-- filter by whatever the user wants -->
    <input name="result1" data-type="string" display-type="select" display-name="label.compareExportResults.result1" required="false">
        <picklist field-id="efrName" required="false">
            <field id="efrName"  sort="true" />
            <field id="efrRunDate" />
        </picklist>
    </input>
    
    <input name="result2" data-type="string" display-type="select" display-name="label.compareExportResults.result2" required="false">
        <picklist field-id="efrName" required="false">
            <field id="efrName"  sort="true" />
            <field id="efrRunDate" />
        </picklist>
    </input>
    
    <input name="procedureId" data-type="string" display-type="text" display-name="label.compareExportResults.procedureId" required="true"/>

    <input name="compIndicator" data-type="string" display-type="text" display-name="label.compareExportResults.compIndicatorColumn" required="true"/>
    <input name="insertRecInd" data-type="string" display-type="text" display-name="label.compareExportResults.insertedRecordInd" required="true"/>
    <input name="updateRecInd" data-type="string" display-type="text" display-name="label.compareExportResults.updatedRecordInd" required="true"/>
    <input name="deleteRecInd" data-type="string" display-type="text" display-name="label.compareExportResults.deletedRecordInd" required="true"/>
    
<!-- ******************** -->
<!-- SAVE RESULTS OPTIONS -->
<!-- ******************** -->
    <input name="saveResults" data-type="boolean" display-type="checkbox" display-name="label.compareExportResults.saveResults" default-value="false" />
    
</tool-input>