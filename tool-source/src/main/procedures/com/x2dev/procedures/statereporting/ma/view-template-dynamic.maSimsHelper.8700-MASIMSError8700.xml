<?xml version="1.0" encoding="UTF-8"?>
<view-template context="dynamic.maSimsHelper.8700" name="MA SIMS Error 8700" locked="false">
  <template>
    <tab name="tab.student.std.list.detail">
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="large">&lt;span style="color:#00a3cc;"&gt;Error Code:&lt;/span&gt;</text>
            <text bold="true" font-size="medium">&amp;nbsp;8700</text>
            <spacer height="15" />
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer />
            </cell>
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="medium">Error Description:</text>
            <text font-size="medium">&amp;nbsp;Days in Membership exceeds maximum for collection period</text>
            <spacer height="15" />
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="medium">Steps to resolve:</text>
            <spacer height="15" />
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer width="15" />
              <text font-size="medium">1. Change the date on W records to be one day before the E records and remove all "PREV" values. W and E records cannot happen on the same date.</text>
            </cell>
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer width="15" />
              <text font-size="medium">2. Remove Adjusted Attendance and Adjusted Membership values</text>
            </cell>
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <spacer width="15" />
              <text font-size="medium">3. Re-publish (SIMS) StudentPersonal and StudentSchoolEnrollment topics (District View &gt; Tools &gt; Procedures, SIF Publish SELECT Student Objects).</text>
            </cell>
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="bottom" shaded="true">
            <text bold="true" font-size="large">&lt;span style="color:#00a3cc;"&gt;&lt;/span&gt;</text>
          </line>
          <line border="none">
            <property alias="DOE Adjusted Attendance" label="Adjusted days in attendance" label-short="false" />
          </line>
          <line border="none">
            <property alias="DOE Adjusted Membership" label="Adjusted days in membership" label-short="false" />
          </line>
        </block>
      </row>
      <row>
        <block>
          <line border="none">
            <text underline="true" font-size="medium">Enrollment History</text>
          </line>
          <line border="none">
            <spacer height="2" />
          </line>
          <line border="none">
            <cell border="none" cell-span="1" line-span="1">
              <embedded-list id="student-enrollment" relationship="relStdEnrOid" selection-type="none" embedded-edit="true" show-blob-text="true" warn-on-delete="true" independent-save="true">
                <field id="enrEnrType" />
                <field id="enrEnrStatus" />
                <field id="enrEnrCode" />
                <field id="relEnrSklOid.sklSchoolName" />
                <field alias="ENR Prev DOE Adjusted Status" />
                <field alias="ENR Prev DOE Adjusted School" />
                <field alias="ENR Prev DOE Adjusted Member" />
                <field alias="ENR Prev DOE Adjusted Attend" />
                <field alias="ENR Prev DOE 13" />
                <field alias="ENR Prev DOE 11" />
                <field alias="ENR Prev Calendar" />
              </embedded-list>
            </cell>
          </line>
        </block>
      </row>
    </tab>
  </template>
</view-template>

