<!-- ******************************************************************* -->
<!-- INPUT DEFINITIONS FOR THE MD PARCC ASSESSMENT IMPORT                -->
<!-- ******************************************************************* -->

<tool-input allow-school-select="false" district-support="true">
 
    <!-- ********************* -->
    <!-- ASSESSMENT DEFINITION -->
    <!-- ********************* -->
    <input name="asdOid" data-type="string" display-type="picklist" display-name="Assesment Definitions">
     <picklist field-id="asdName" required="true" >
      <field id="asdName" sort="true" />
      <field id="asdType" />
      </picklist>
    </input>
 
    <!-- ********************* -->
    <!--    FIELD COUNT        -->
    <!-- ********************* -->
    <input name="fieldCount" data-type="integer" display-type="hidden" default-value="28" /> 
    
    <!-- ***************** -->
    <!--    SASID FIELD    -->
    <!-- ***************** -->
    <input name="sasidField" data-type="character" display-type="hidden" default-value="sasid" />
 
    <!-- ********************* -->
    <!--    TEST CODE FIELD    -->
    <!-- ********************* -->
    <input name="testCodeField" data-type="character" display-type="hidden" default-value="Testcode" /> 
    
    <!-- ********************* -->
    <!--    TEST DATE FIELD    -->
    <!-- ********************* -->
    <input name="testDateField" data-type="date" display-type="date" display-name="Assessment Date" required="true" />
    
    <!-- ********************* -->
    <!--    TEST DATE FORMAT   -->
    <!-- ********************* -->
    <input name="testDateFormat" data-type="character" display-type="hidden" default-value="yyyy-MM-dd HH:mm:ss" />
    
    <!-- ***************** -->
    <!--    DEBUG FIELD    -->
    <!-- ***************** -->
    <input name="debug" data-type="boolean" display-type="hidden" default-value="false" />
 
</tool-input>

