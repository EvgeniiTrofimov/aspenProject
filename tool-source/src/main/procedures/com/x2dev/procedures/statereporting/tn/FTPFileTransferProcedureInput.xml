<?xml version="1.0" encoding="UTF-8"?>
<!-- ******************************************************* -->
<!-- INPUT DEFINITIONS FOR THE "SSH FILE TRANSFER" PROCEDURE -->
<!-- ******************************************************* -->

<tool-input>

 <!-- ******************************** -->
 <!-- SERVER AND CONNECITON PARAMETERS -->
 <!-- ******************************** -->

 <input name="server" data-type="string" display-type="text" display-name="procedure.fileTransfer.server" required="true" />
 <input name="userId" data-type="string" display-type="text" display-name="procedure.fileTransfer.userId" required="true" />
 <input name="password" data-type="string" display-type="text" display-name="procedure.fileTransfer.password" required="true" />
 <input name="port" data-type="integer" display-type="text" display-name="procedure.fileTransfer.port" required="true" default-value="22" />

 <!-- ******************* -->
 <!-- FILES AND OPERATION -->
 <!-- ******************* -->

 <input name="localFile" data-type="string" display-type="hidden" display-name="procedure.fileTransfer.localFile" required="true" default-value="IEPDownloads"/>
 <input name="remoteFile" data-type="string" display-type="text" display-name="procedure.fileTransfer.remoteFile" required="true" />
 
 <input name="studentDoePinAlias" data-type="string" display-type="hidden" default-value="DOE PIN"/>
 <input name="programImportFlagAlias" data-type="string" display-type="hidden" default-value="EasyIEP Import"/>
 <input name="programImportTypeAlias" data-type="string" display-type="hidden" default-value="EasyIEP Type"/>
 
 
</tool-input>