<?xml version="1.0" encoding="UTF-8"?>
<tool-input allow-school-select="false" district-support="true">

    <!-- ************* -->
    <!--   FILE TYPE   -->
    <!-- ************* -->
    <input name="filetype" data-type="string" display-type="select" display-name="report.shared.fileType">
      <option value="PUBLIC" display-name="report.shared.publicSchools" />
      <option value="PRIVATE" display-name="report.shared.privateSchools" />
      <option value="INTERNATIONAL" display-name="report.shared.internationalSchools" />
    </input>

    <!-- ************* -->
    <!-- COMMIT/REVIEW -->
    <!-- ************* -->
    <input name="commit" data-type="boolean" display-type="select" display-name="report.shared.runOptions" default-value="false">
      <option value="false" display-name="report.shared.review" />
      <option value="true" display-name="report.shared.commit" />
    </input>

</tool-input>
