<?xml version="1.0" encoding="UTF-8"?>

<!-- INPUT DEFINITIONS FOR SCHOOL WORKFORCE SUMMARY EXPORT -->

<tool-input allow-school-select="true" district-support="false" height="500">

    <!-- Procedure ID -->
    <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-UK-SWC" />
    
    <!-- Date Parameters -->
    <input name="censusDate" data-type="date" display-type="date" display-name="Census Date" />  
    <input name="contractStartDate" data-type="date" display-type="date" display-name="Contract Start Date" />
    <input name="contractEndDate" data-type="date" display-type="date" display-name="Contract End Date" /> 
    <input name="termStartDate" data-type="date" display-type="date" display-name="Term Start Date" />
    <input name="termEndDate" data-type="date" display-type="date" display-name="Term End Date" /> 
    <input name="absenceStartDate" data-type="date" display-type="date" display-name="Absence Start Date" /> 
    <input name="absenceEndDate" data-type="date" display-type="date" display-name="Absence End Date" /> 
        
	<input name="xslfiles" display-name="School Workforce XSL File Directory" data-type="string" 
	       display-type="hidden" default-value="" />
	        
	<input name="intermediateFile" display-name="School Workforce Intermediate XSLT File" data-type="string" 
	       display-type="hidden" default-value="" />
	       
	<input name="presentationFile" display-name="School Workforce Presentation XSLT File" data-type="string" 
	       display-type="hidden" default-value="" />

</tool-input>
