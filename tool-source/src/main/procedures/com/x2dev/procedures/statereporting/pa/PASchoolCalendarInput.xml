<?xml version="1.0" encoding="UTF-8"?>
<!-- ******************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "PIMS School Calendar" EXPORT -->
<!-- ******************************************************** -->

<tool-input allow-school-select="true" district-support="true">

 <!-- ************** -->
 <!-- DATA PROCEDURE -->
 <!-- ************** -->

 <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-PA-CSD"/>
 
 <!-- *********** -->
 <!-- SCHOOL YEAR -->
 <!-- *********** -->
 <input name="contextOid" data-type="string" display-type="picklist" display-name="report.shared.schoolYear" default-value="organization.currentContextOid" default-value-source="session">
   <picklist field-id="ctxSchoolYear">
     <field id="ctxSchoolYear" sort="true" />
     <field id="ctxContextName" />
   </picklist>
 </input>

 <!-- ******************** -->
 <!-- SAVE RESULTS OPTIONS -->
 <!-- ******************** -->
 
 <input name="saveResults" data-type="boolean" display-type="checkbox" display-name="Save Results" default-value="false" />

</tool-input>