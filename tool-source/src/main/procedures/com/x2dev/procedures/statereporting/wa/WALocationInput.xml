<!-- ******************************************* -->
<!-- INPUT DEFINITIONS FOR THE "LOCATION EXPORT" -->
<!-- ******************************************* -->

<tool-input allow-school-select="true" district-support="true" height="400">

 <!-- ************** -->
 <!-- DATA PROCEDURE -->
 <!-- ************** -->

 <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-WA-LOC"/>

 <!-- ********* -->
 <!-- USER SORT -->
 <!-- ********* -->

 <input name="sortBy" data-type="string" display-type="select" display-name="report.shared.sort">
   <option value="schoolId" display-name="School ID" />
   <option value="name" display-name="School name" />
 </input>

<!-- ******************* -->
<!-- EXCLUDE SCHOOL FLAG -->
<!-- ******************* -->

 <input name="excludeSchool" data-type="boolean" display-type="checkbox" display-name="Remove excluded schools" default-value="true" />

 <!-- ******************** -->
 <!-- SAVE RESULTS OPTIONS -->
 <!-- ******************** -->
 
 <input name="saveResults" data-type="boolean" display-type="checkbox" display-name="Save Results" default-value="false" />

</tool-input>