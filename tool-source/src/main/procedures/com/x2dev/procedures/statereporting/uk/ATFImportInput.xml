<tool-input height="500" >

 <input name="update-existing" data-type="boolean" display-type="checkbox" display-name="Update existing pupils if found" default-value="true"/>
 
  <group header="Containers">
 	<input name="core" data-type="boolean" display-type="hidden" display-name="Core Information" default-value="true" />
 	<input name="basic-details" data-type="boolean" display-type="checkbox" display-name="BasicDetails" default-value="true" />
 	<input name="fsm-history" data-type="boolean" display-type="checkbox" display-name="FSM History" default-value="true" />
 	<input name="sen-history" data-type="boolean" display-type="checkbox" display-name="SEN History" default-value="true" />
	<input name="address-phone-email" data-type="boolean" display-type="checkbox" display-name="Address, Phone and Email" default-value="true" />
 	<input name="contacts" data-type="boolean" display-type="checkbox" display-name="Contacts" default-value="true" />
 	<input name="school-history" data-type="boolean" display-type="checkbox" display-name="School History" default-value="true" /> 	
 </group>
 
</tool-input>