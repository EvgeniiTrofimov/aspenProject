<!-- *************************************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "MA Medicaid Roster Export" -->
<!-- *************************************************************************** -->

<tool-input allow-school-select="true" district-support="true" height="560">

    <!-- ************** -->
    <!-- DATA PROCEDURE -->
    <!-- ************** -->
    <input name="procedureId" data-type="string" display-type="hidden" default-value="EXPDATA-MEDICAID-STD" />

    <!-- ******************** -->
    <!-- INCLUDE STUDENTS WITH SASID's OPTION -->
    <!-- ******************** -->
    <input name="includeStudents" data-type="boolean" display-type="checkbox" display-name="Include Students with SASID's only" default-value="false" />

    <!-- ******************** -->
    <!-- SAVE RESULTS OPTIONS -->
    <!-- ******************** -->
    <input name="saveResults" data-type="boolean" display-type="checkbox" display-name="Save Results" default-value="false" />

</tool-input>