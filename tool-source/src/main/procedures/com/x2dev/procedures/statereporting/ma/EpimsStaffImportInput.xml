 <!-- ************* -->

 <input name="clearDegrees" data-type="boolean" display-type="checkbox" display-name="Clear Degrees" default-value="false"/>

 <!-- ************* -->
 <!-- CLEAR-LICENSE -->
 <!-- ************* -->

 <input name="clearLicense" data-type="boolean" display-type="checkbox" display-name="Clear License" default-value="false"/>

 <!-- ************* -->
 <!-- value Wrapper -->
 <!-- ************* -->
 
 <input name="valueWrapper" data-type="boolean" display-type="checkbox" display-name="Value Wrapped with quotes" default-value="true"/>

 <!-- ************* -->
 <!-- COMMIT/REVIEW -->
 <!-- ************* -->
 
 <input name="commit" data-type="boolean" display-type="select" display-name="Run Options" default-value="false">
