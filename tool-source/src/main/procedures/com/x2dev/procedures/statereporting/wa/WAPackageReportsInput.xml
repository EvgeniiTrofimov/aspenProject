<!-- **************************************************** -->
<!-- INPUT DEFINITIONS FOR THE "PACKAGE REPORTS" PROCEDURE-->
<!-- **************************************************** -->

<tool-input height="400">

 <!-- ************** -->
 <!-- FILE DIRECTORY -->
 <!-- ************** -->

 <input name="filePath" data-type="string" display-type="text" display-name="Export file directory" />

 <!-- ******************** -->
 <!-- FULL ZIP NAME OPTION -->
 <!-- ******************** -->
 
 <input name="zipName" data-type="boolean" display-type="hidden" display-name="Expand zip file name" default-value="true" />

 <!-- ******************** -->
 <!-- DO NOT DELETE OPTION -->
 <!-- ******************** -->
 
 <input name="doNotDelete" data-type="boolean" display-type="hidden" display-name="Do not delete" default-value="true" />

 <!-- ******************** -->
 <!-- DO NOT DELETE DEST FILES OPTION -->
 <!-- ******************** -->

<input name="doNotDeleteDest" data-type="boolean" display-type="checkbox" display-name="Do not delete destination file" default-value="true" />


</tool-input>