<tool-input allow-school-select="false" district-support="true">

 <input name="updateExisting" data-type="boolean" display-type="checkbox" display-name="Update existing grouped series" default-value="false" />
    
 <input name="himOid" data-type="string" display-type="picklist" display-name="Source immunization definition" required="true">
  <picklist field-id="himSeriesId" multiple="false">
   <field id="himSeriesId" sort="true" />
   <field id="himSeriesName" />
  </picklist>
 </input>

 <input name="higOid" data-type="string" display-type="picklist" display-name="Target group" required="true">
  <picklist field-id="higGroupId" multiple="false">
   <field id="higGroupId" sort="true" />
   <field id="higGroupName" />
  </picklist>
 </input>

 <input name="himAlias1" data-type="string" display-type="text" display-name="Immunization alias 1 (optional)" required="false"/>
 <input name="himAlias2" data-type="string" display-type="text" display-name="Immunization alias 2 (optional)" required="false"/>
 <input name="himAlias3" data-type="string" display-type="text" display-name="Immunization alias 3 (optional)" required="false"/>

 <input name="higAlias1" data-type="string" display-type="text" display-name="Group alias 1 (optional)" required="false"/>
 <input name="higAlias2" data-type="string" display-type="text" display-name="Group alias 2 (optional)" required="false"/>
 <input name="higAlias3" data-type="string" display-type="text" display-name="Group alias 3 (optional)" required="false"/>

</tool-input>