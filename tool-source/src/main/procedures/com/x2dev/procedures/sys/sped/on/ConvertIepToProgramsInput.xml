<!-- ************************************************************** -->
<!-- INPUT DEFINITIONS FOR CONVERT IEP TO PROGRAM                   -->
<!-- ************************************************************** -->

<tool-input>

  <!-- ****** -->
  <!-- SOURCE -->
  <!-- ****** -->
  <input name="source" data-type="string" display-type="select" display-name="report.shared.query" default-value="current">
   <option value="all" display-name="report.shared.query.all" />
   <option value="current" display-name="report.shared.query.currentSelection" />
  </input>
    
  <!-- ****************** -->
  <!-- CLEAR OLD PROGRAMS -->
  <!-- ****************** -->
  <input name="clear" data-type="boolean" display-type="checkbox" display-name="label.copyiep.clear" default-value="false" />
    
</tool-input>