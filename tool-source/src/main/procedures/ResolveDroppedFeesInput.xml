<tool-input>

 <!-- *************** -->
 <!-- Warning Message: For partially or completely paid fees to be handled correctly a user defined field on 
  CashiersJournalEntry needs to be set with an alias of CASH-REFUND-REQUIRED -->
 <!-- **************** -->

 <!-- ************ -->
 <!-- GROUPS -->
 <!-- ************ -->

 <input name="groups" data-type="boolean" display-type="checkbox" display-name="Groups" default-value="true" />

 <!-- ************ -->
 <!-- COURSES -->
 <!-- ************ -->

 <input name="courses" data-type="boolean" display-type="checkbox" display-name="Courses" default-value="true" />

 <!-- ************ -->
 <!-- RESOLUTION TYPE-->
 <!-- Change the display-type to 'select' and choose 'delete' if you want to delete fees instead of void them -->
 <!-- ************ -->

<input name="resolveFeeBy" data-type="string" display-type="select" display-name=" Fee Resolution " >
  <option value="void" display-name="Void" />
  <option value="delete" display-name="Delete"/>
</input>

</tool-input>