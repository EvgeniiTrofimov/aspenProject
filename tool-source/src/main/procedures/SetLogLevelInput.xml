<!-- INPUT DEFINITIONS FOR THE SET LOG LEVEL TOOL -->
<!-- ******************************************** -->

<tool-input allow-school-select="false" district-support="false">

 <!-- ********* -->
 <!-- LOG LEVEL -->
 <!-- ********* -->

 <input name="logLevel" data-type="string" display-type="select" display-name="System log level">
  <option value="INFO" display-name="Info"/>
  <option value="FINE" display-name="Fine"/>
  <option value="FINER" display-name="Finer"/>
  <option value="FINEST" display-name="Finest"/>
  <option value="SEVERE" display-name="Severe"/>
  <option value="WARNING" display-name="Warning"/>
  <option value="CONFIG" display-name="Config"/>
  <option value="ALL" display-name="All"/>
  <option value="OFF" display-name="Off"/>
 </input>
 
</tool-input>